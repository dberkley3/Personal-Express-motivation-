<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Personal</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>

  <section>
  <h1>Motivational Quotes</h1>

  <h2>Submit your quotes to keep you motivated!</h2>
  
  <form action="/messages" method="POST">
    <input type="text" placeholder="Quote" name="name">
    <input type="text" placeholder="Author" name="msg">
    <button type="submit">Submit</button>
  </form>


  <ul class="messages">
   <% for(var i=0; i<messages.length; i++) {%> <!-- this is the messages colection -->
    <li class="message">
      <span><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span>
      <span><%= messages[i].thumbUp %></span>
      <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  
  </section>

  <script src="main.js"></script>

</body>
</html>
